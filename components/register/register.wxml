<view class="register">
    <view class="mask" wx:if="{{!isHide}}">
        <form bindsubmit="formSubmit" bindreset="formReset" >
            <view class="register_title">注册</view>
            <view class="user_name">
                <text>用户名</text>
                <input type="number" value="{{user_name}}" name="{{user_name}}" />
            </view>
            <view class="password">
                <text>密码</text>
                <input type="password" value="{{password}}" name="{{password}}" />
            </view>
            <view class="btn_area">
                <button formType="submit">注册</button>
                <button formType="reset">重置</button>
            </view>
        </form>
    </view>
</view>